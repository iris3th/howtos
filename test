pipeline{
    agent any
 
    stages {
     stage('Main'){
        steps {
        load "environments/sff_${BUILD_ENV}_runtime.vars"
        }
     }
 
     stage('Get RUN ID'){
       steps {
         withCredentials([usernamePassword(credentialsId: "mongo_rs_sfrr_${BUILD_ENV}", usernameVariable: 'MONGO_USERNAME', passwordVariable: 'MONGO_PASSWORD')]) {
          script {
          sh "echo 1 > run_id.txt && while grep -v \"0\" run_id.txt > /dev/null; do echo -n ${Math.abs(new Random().nextInt(32000+1))} >random_runid.txt && mongo mongodb://${DATABASE_HOST}/${STAGING_DATABASE} --username $MONGO_USERNAME --password $MONGO_PASSWORD --authenticationDatabase admin --quiet --eval 'rs.secondaryOk(); db.getCollection(\"OrchestratorRunAuditLogs\").find({\"method\":/_0/}).count()' > run_id.txt;done"
          sh "cat random_runid.txt"
        }
        }
       }
     }
     stage('SOD Job'){
        when{
            allOf{
                expression { params.SOD_JOB }
                expression { return readFile('run_id.txt').contains('0') }
           }
        }
        steps {
          echo "Running SOD Job ${FIRE_URL}"
          sh "echo ${FIRE_URL}"
          sh "echo ${BUILD_ENV}"
      }
    }
}
}
